{
    "manifest_version": 3,
    "name": "BrainRot - Gesture Control for Social Media",
    "version": "1.0",
    "description": "Control Instagram Reels & YouTube Shorts with facial gestures",
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "*://*.instagram.com/*",
        "*://*.youtube.com/*"
    ],
    "action": {
        "default_popup": "popup/popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.instagram.com/*",
                "*://*.youtube.com/shorts/*"
            ],
            "js": [
                "lib/mediapipe-face-mesh.js",
                "lib/mediapipe-camera-utils.js",
                "lib/face-detection.js",
                "lib/gesture-controls.js",
                "content/content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["lib/*"],
            "matches": [
                "*://*.instagram.com/*",
                "*://*.youtube.com/*"
            ]
        }
    ]
}